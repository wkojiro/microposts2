<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      
    </section>
    
      <div class="col-md-6">
        following(

<%= link_to (@following_users.count) , following_user_path %>)

   
        
      </div>
      <div class="col-md-6">
        followers(
<%= link_to (@follower_users.count) , follower_user_path %>)


      </div>   
  </aside>
  <div class="col-md-8">
  <%= render 'follow_form' if logged_in? %>  
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
    <% end %>
  

    
    
    
    
    
  </div>
</div>